@page "/testcanvas"
@namespace DemoShared.Pages
@inherits AppComponentBase

@using BootstrapBlazor.Components

<div @ref="Element">

    <div class="container">
        <h3>Image</h3>
        <div>
            <img id="image" src="./_content/DemoShared/test.jpg" alt="Picture">
        </div>
        <h3>Result</h3>
        <p>
            <button type="button" id="button">OK</button>
        </p>
        <p>
            <button type="button" id="replace">Replace Image</button>
        </p>
        <div id="result"></div>


        <label class="label" data-toggle="tooltip" title="Change your avatar">
            <img class="rounded" id="avatar" src="https://avatars0.githubusercontent.com/u/3456749?s=160" alt="avatar">
            <input type="file" class="sr-only" id="input" name="image" accept="image/*">
        </label>
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
        </div>
        <div class="alert" role="alert"></div>
        <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel">Crop the image</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="img-container">
                            <img id="newAvatar" src="https://avatars0.githubusercontent.com/u/3456749">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" id="crop">Crop</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <canvas data-action="canvas" class="canvas"> </canvas>
    <pre data-action="log" class="photo"></pre>
</div>

<link href="./_content/DemoShared/cropper.css" rel="stylesheet" asp-append-version="true">
